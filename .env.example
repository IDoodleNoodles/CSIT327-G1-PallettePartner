# ===========================
# PALLETTEPARTNER ENVIRONMENT VARIABLES
# ===========================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# Django Secret Key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-secret-key-here

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# ===========================
# SUPABASE STORAGE CONFIGURATION (For Production)
# ===========================
# Set this to 'true' to enable Supabase Storage for media/static files
USE_SUPABASE_STORAGE=false

# Supabase Project URL (find in Supabase Dashboard > Settings > API)
SUPABASE_URL=https://xxxxx.supabase.co

# Storage Bucket Name (create in Supabase Dashboard > Storage)
SUPABASE_STORAGE_BUCKET_NAME=pallettepartner-media

# Supabase S3 Access Keys (generate in Supabase Dashboard > Settings > API > S3 Access Keys)
SUPABASE_ACCESS_KEY_ID=your-access-key-id
SUPABASE_SECRET_ACCESS_KEY=your-secret-access-key

# Supabase Region (usually us-east-1 for most projects)
SUPABASE_REGION=us-east-1

# ===========================
# OPTIONAL: EMAIL CONFIGURATION
# ===========================
# For production email (if you set up SMTP)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@pallettepartner.com
